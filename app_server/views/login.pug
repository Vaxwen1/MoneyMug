extends layout

block content
  section.vh-100.login-section
    .container-fluid.h-custom
      .row.d-flex.justify-content-center.align-items-center.h-100
        .col-md-9.col-lg-6.col-xl-5
          img.img-fluid(src="img/money_mug.png" alt="Money Pot")
        .col-md-8.col-lg-6.col-xl-4.offset-xl-1
          form
            // Email input
            .form-outline.mb-4(data-mdb-input-init)
              label.form-label(for="form3Example3") Email:
              input#form3Example3.form-control.form-control-lg(type="email" placeholder="Email address")
              

            // Password input
            .form-outline.mb-3(data-mdb-input-init)
              label.form-label(for="form3Example4") Password:
              input#form3Example4.form-control.form-control-lg(type="password" placeholder="Password")

            .text-center.text-lg-start.mt-4.pt-2
              button.btn.btn-primary.btn-lg(type="button" data-mdb-button-init data-mdb-ripple-init style="padding-left: 2.5rem; padding-right: 2.5rem;") Login
              p.small.fw-bold.mt-2.pt-1.mb-0
                | Don't have an account? 
                a.link-danger(href="/signup") Register